pipeline {
    agent any
    stages {
        stage('get code from github') {
            steps {
                sh 'aws --version'
                sh 'cdk --version'
                git(url: 'https://github.com/brandonvio/mytodos.xyz', credentialsId: '058c7925-dbe1-41c8-9d81-018cfed7a721', branch: 'master')
            }
        }

        stage('Build Apps') {
            parallel {
                stage('lambda-app') {
                    steps {
                        dir('lambda-app') {
                            sh 'npm install'
                            sh 'npm run build'
                            sh 'cp -r ./build ../cdk-app-02/builds/lambda-app-build'
                        }
                    }
                }

                stage('react-app') {
                    steps {
                        dir('react-app') {
                            sh 'npm install'
                            sh 'npm run build'
                            sh 'cp -r ./build ../cdk-app-02/builds/react-app-build'
                        }
                    }
                }
            }
        }

    // stage('cdk-app') {
