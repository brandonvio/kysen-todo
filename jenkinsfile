pipeline {
    agent any
    stages {
        stage('Validate') {
            steps {
                sh 'aws --version'
                sh 'cdk --version'
                sh 'node --version'
                sh 'npm --version'
                sh 'tsc --version'
            }
        }

        stage('Build') {
            parallel {
                stage('Lambda App') {
                    steps {
                        dir('lambda-app') {
                            sh 'npm install'
                            sh 'npm run build'
                            sh 'cp -r ./build ../cdk-app-02/builds/lambda-app-build'
                        }
                    }
                }

                stage('React App') {
                    steps {
                        dir('react-app') {
                            sh 'npm install'
                            sh 'npm run build'
                            sh 'cp -r ./build ../cdk-app-02/builds/react-app-build'
                        }
                    }
                }
            }
        }

        stage('CDK App') {
            steps {
                dir('cdk-app-02') {
                    withAWS(credentials: 'kysen-build-dev', region: 'us-east-1') {
                        sh 'aws s3 ls'
                        sh 'npm install'
                        sh 'npm run build'
                        sh 'cdk deploy \\"*\\" --require-approval=never'
                    }
                }
            }
        }
    }
}
