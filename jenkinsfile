node {
    stage('get code from github') {
        sh 'aws --version'
        sh 'cdk --version'
        git(
           url: 'https://github.com/brandonvio/mytodos.xyz',
           credentialsId: '058c7925-dbe1-41c8-9d81-018cfed7a721',
           branch: 'master'
        )
    }

    stage('lambda-app') {
        dir('lambda-app') {
            sh 'npm install'
            sh 'npm run build'
            sh 'cp -r ./lambda-app/build ./cdk-app-02/builds/lambda-app-build'
        }
    }

    stage('react-app') {
        dir('react-app') {
            sh 'npm install'
            sh 'npm run build'
            sh 'cp -r ./react-app/build ./cdk-app-02/builds/react-app-build'
        }
    }

    stage('cdk-app') {
        echo "Let's begin."
